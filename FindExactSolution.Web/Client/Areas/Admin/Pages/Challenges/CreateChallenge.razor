@page "/admin/events/{eventId:guid}/challenges/create"

<div class="p-4">
    <section class="challenge-create">

        <h2 class="page-title">Create</h2>

        <EditForm Model="@AdminChallengeCreateResource" OnValidSubmit="@HandleValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-group">
                <label for="title">Title </label>
                <InputTextArea id="title" class="form-control" placeholder="Enter a title" @bind-Value="@AdminChallengeCreateResource.Title"></InputTextArea>
            </div>

            <div class="form-group">
                <label for="body">Order </label>
                <InputNumber id="order" class="form-control" min="0" @bind-Value="@AdminChallengeCreateResource.Order"></InputNumber>
            </div>

            <div class="form-group">
                <label for="body">Body </label>
                <QuillRichTextBox />
                <div @ref="@DivEditorElement" />
            </div>

            <button type="submit" class="btn btn-success edit-btn">Create</button>

            <button class="btn btn-danger edit-btn" @onclick="Cancel">Cancel</button>

        </EditForm>

    </section>
</div>

