@page "/admin/events/{eventId:guid}/questions/{id:guid}/edit"

<section class="question-edit">
    <h1 class="page-title">Edit</h1>

    <EditForm Model="@EditQuestionResource" OnValidSubmit="@HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="title">Title </label>
            <InputTextArea id="title" class="form-control" placeholder="Enter a title" @bind-Value="@EditQuestionResource.Title"></InputTextArea>
        </div>

        <div class="form-group">
            <label for="body">Body </label>
            <QuillRichTextBox />
            <div @ref="@DivEditorElement" />
        </div>

        <div class="form-group">
            <label for="body">Point </label>
            <InputNumber id="point" class="form-control" min="0" @bind-Value="@EditQuestionResource.Point"></InputNumber>
        </div>

        <button type="submit" class="btn btn-info edit-btn">Save</button>

        <button class="btn btn-danger edit-btn" @onclick="Cancel">Cancel</button>

    </EditForm>
</section>

<br/>