@page "/events/{id:guid}"

@if (_event == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <h3>@_event.Title <span class="badge badge-info">@_event.StartDateTime.ConvertToDefaultDateFormat()</span></h3>

    <div class="progress">
        <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
    </div>

    <br />

    @if (!_event.IsCurrentUserRegistered)
    {
        <div class="alert alert-success" role="alert">
            Registration for this event is available
        </div>

        <button type="button" class="btn btn-info" @onclick="RegisterAsync">Register</button>
    }
    else
    {
        <div class="alert alert-success" role="alert">
            You have successfully registered for an event
        </div>

        @if (_event.Team != null)
        {
            <h4>@_event.Team.Name</h4>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Username</th>
                        <th scope="col">First name</th>
                        <th scope="col">Last name</th>
                        <th scope="col">Email</th>
                    </tr>
                </thead>
                <tbody>
                    @code{int row = 0;}

                    @foreach (var member in _event.Team.Users)
                    {
                    <tr>
                        <td>@(++row)</td>
                        <td>@member.UserName</td>
                        <td>@member.FirstName</td>
                        <td>@member.LastName</td>
                        <td>@member.Email</td>
                    </tr>
                    }
                </tbody>
            </table>
        }
    }
}